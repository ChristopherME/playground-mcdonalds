<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.McDonalds" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@android:color/holo_orange_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="textAppearanceBody1">@style/TextAppearance.McDonalds.Body1</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.McDonalds.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.McDonalds.Headline6</item>

        <!-- Ref: https://bryanherbst.com/2020/05/04/bottom-sheet-corners/ -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.McDonalds.BottomSheetDialog</item>

    </style>

    <style name="ThemeOverlay.McDonalds.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.McDonalds.BottomSheet</item>
    </style>

    <style name="Widget.McDonalds.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.McDonalds</item>
    </style>

    <style name="ShapeAppearanceOverlay.McDonalds" parent="">
        <item name="cornerSize">8dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>